{
  "name": "shadelight-electron",
  "version": "0.2.0",
  "author": "PufyBee",
  "main": "main.js",            
  "productName": "Shadelight",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --publish=never"
  },
  "build": {
    "productName": "Shadelight",
    "files": [
      "main.js",
      "renderer.js",
      "index.html",
      "assets/**/*",
      "shadelight_backend.exe"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icons/logo.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true
    }
  }
}
